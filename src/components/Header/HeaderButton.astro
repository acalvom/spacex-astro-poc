---
interface Props {
  path: string;
}

const { path } = Astro.props;
---

<a
  class="flex flex-row text-center items-center gap-x-2 mx-2 mt-1 mb-2 py-2 px-4 text-sm lg:text-md border border-teal-200 rounded-md transition ease-out duration-200 hover:-translate-y-1 hover:scale-110 hover:bg-teal-400 hover:border-none hover:shadow-md hover:shadow-current hover:text-teal-900"
  href={path}>
  <slot name="before" />
  <slot />
  <slot name="after" />
</a>
